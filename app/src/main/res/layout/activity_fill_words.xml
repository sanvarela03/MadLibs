<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FillWords">

    <TextView
            android:layout_width="wrap_content"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:text="Fill in the words to complete the story!"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/the_words_left"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="32dp"
            android:text="7 word(s) left" android:textSize="24sp" app:layout_constraintBottom_toTopOf="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/the_word_to_fill"
            android:hint="noun" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/the_words_left" android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp" android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.024"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ok_button"
            app:layout_constraintStart_toEndOf="@+id/the_word_to_fill" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/the_words_left" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.614" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.017" android:text="@android:string/ok"
            tools:text="@android:string/ok"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hint_text_view"
            android:text="please type a/an noun" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/the_word_to_fill"
            app:layout_constraintHorizontal_bias="0.147"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.058"
            android:layout_marginTop="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>